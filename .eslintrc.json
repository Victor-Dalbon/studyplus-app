{
  "extends": [
    "eslint:recommended",
    "next/core-web-vitals", 
    "next/typescript",
    "plugin:prettier/recommended"
  ],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto",
        "singleQuote": true,
        "semi": false,
        "tabWidth": 2,
        "trailingComma": "all"
      }
    ]
  }
}
